<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="27dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/layout_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#29418F"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/logo4" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/eventText1"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:text="진행중인 행사"
        android:textColor="#29418F"
        android:textSize="20dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/imgbtn1"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/event1"></ImageButton>

            <ImageButton
                android:id="@+id/imgbtn2"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/event2"></ImageButton>

            <ImageButton
                android:id="@+id/imgbtn3"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/event3"></ImageButton>

            <ImageButton
                android:id="@+id/imgbtn4"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/event4"></ImageButton>

            <ImageButton
                android:id="@+id/imgbtn5"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/event5"></ImageButton>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/eventText2"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:text="추천 사이트"
        android:textColor="#29418F"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageBtn1"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/compuzone"></ImageButton>

                    <ImageButton
                        android:id="@+id/imageBtn2"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/comsclub"></ImageButton>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:gravity="center_horizontal"
                        android:text="컴퓨존"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal"
                        android:text="컴스클럽"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:gravity="center_horizontal"
                        android:text="전자제품 전문 사이트"
                        android:textAlignment="center"></TextView>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal"
                        android:text="게임용, 오버클러킹, PC부품"
                        android:textAlignment="center"></TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageBtn3"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/dicle"></ImageButton>

                    <ImageButton
                        android:id="@+id/imageBtn4"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/dtek"></ImageButton>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:gravity="center_horizontal"
                        android:text="디클"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal"
                        android:text="디테크"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:gravity="center_horizontal"
                        android:text="뛰어난 가성비, 다양한 컬러"
                        android:textAlignment="center"></TextView>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal"
                        android:text="리퍼비시 판매 전문"
                        android:textAlignment="center"></TextView>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="#00FFFFFF"
                android:gravity="center_horizontal"
                android:text="통합 쇼핑몰"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageBtn5"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/auction"></ImageButton>

                    <ImageButton
                        android:id="@+id/imageBtn6"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/gmarket"></ImageButton>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:gravity="center_horizontal"
                        android:text="옥션 노트북 바로가기"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal"
                        android:text="지마켓 노트북 바로가기"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageBtn7"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/interpark"></ImageButton>

                    <ImageButton
                        android:id="@+id/imageBtn8"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/g9"></ImageButton>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7dp"
                        android:gravity="center_horizontal"
                        android:text="인터파크 노트북 바로가기"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal"
                        android:text="G9 노트북 바로가기"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
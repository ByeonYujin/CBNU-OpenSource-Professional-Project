<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/background_img"
            android:src="@drawable/round_background"
            android:padding="15dp"/>

        <Button
            android:id="@+id/recommendBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:backgroundTint="#DCDCDC"
            android:text="추천받기" />

        <Button
            android:id="@+id/buyBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="206dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:backgroundTint="#29418F"
            android:text="사러가기"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:text="옵션 선택"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="#e5e5e5"
            android:text="제조사"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#0E00CC" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"
            android:background="@drawable/spinner_background"
            android:entries="@array/제조사"
            android:popupBackground="#ffffff"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:background="#e5e5e5"
            android:text="사용 용도"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#0E00CC"
            tools:layout_marginLeft="0dp" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="330dp"
            android:background="@drawable/spinner_background"
            android:entries="@array/사용용도"
            android:popupBackground="#ffffff"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            android:background="#e5e5e5"
            android:text="화면 크기"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#0E00CC"
            tools:layout_marginLeft="0dp" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="430dp"
            android:background="@drawable/spinner_background"
            android:entries="@array/화면크기"
            android:popupBackground="#ffffff"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="530dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="#29418F"
            android:text="검색"
            android:textColor="#ffffff" />

    </FrameLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#29418F"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginLeft="85dp"
            app:srcCompat="@drawable/logo4" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_wishlist"
            android:id="@+id/wishlistBtn"
            android:layout_marginLeft="95dp"
            ></ImageView>
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>